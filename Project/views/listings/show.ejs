<%layout("./layouts/boilerplate")-%>
<div class="row">
    <div class="col-8 offset-3">
    <h3>Listing Details: </h3>
    </div>
     <div class="card col-6 offset-3">
        <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" class="show-img">

  <div class="card-body">
    <p class="card-text">
    <p><b><%=listing.title%></b></p>
    <p><b><%=listing.description%></b></p>
    <p><b>&#8377;<%=listing.price.toLocaleString("en-IN")%></b></p>
    <p><b><%=listing.location%></b></p>
    <p><b><%=listing.country%></b></p>
  </div>
</div>
    <br>
    <a href="/listings/<%=listing._id%>/edit" id="Editlink">Edit</a>
    <form method= "POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button id="Deletelink">Delete</button>
    </form>
</div>