<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3 id="newList">Create a new Listing</h3>
        <!-- <br><br> -->
        <form action="/listings" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" placeholder="Add a catchy Title" class="form-control" name="listing[title]">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="Enter Description" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image-Link</label>
                <input placeholder="enter image link" name="listing[image]" class="form-control">
            </div>
            <div class="row">
                <div class="mb-3 col-6">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" class="form-control" placeholder="1200" type="number">
                </div>
                <div class="mb-3 col-6">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" placeholder="India" name="listing[country]" class="form-control">
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" class="form-control" placeholder="Jaipur Rajasthan" type="text">
            </div>
            <button class="btn btn-dark add-btn" id="Add">Add</button>
        </form>
    </div>
</div>
